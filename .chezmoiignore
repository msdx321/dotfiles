{{- /* Define variables for operating systems */ -}}
{{- $isDarwin := eq .chezmoi.os "darwin" -}}
{{- $isLinux := eq .chezmoi.os "linux" -}}
{{- $hasDesktop := env "DESKTOP_SESSION" -}}

{{- /* Conditionally include Library/ for non-Darwin systems */ -}}
{{- if not $isDarwin }}
Library/
{{- end }}

{{- /* Conditionally include GTK and related configurations */ -}}
{{- if or (not $isLinux) (not $hasDesktop) }}
.config/gtk-3.0
.config/gtk-4.0
.config/electron-flags.conf
.local/share/fcitx5
{{- end }}

{{- /* Conditionally include lazygit configuration for non-Linux systems */ -}}
{{- if not $isLinux }}
.config/lazygit
{{- end }}
